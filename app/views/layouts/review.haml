!!! 5
%html{ lang: "en"}
  = render "layouts/head"
  - if current_user
    %body{class: @body_class, 'data-page' => body_data_page}
      -# Ideally this would be inside the head, but turbolinks only evaluates page-specific JS in the body.
      - project = @project
        - if current_user
        :javascript
          window.project_uploads_path = "#{namespace_project_uploads_path project.namespace,project}";
          window.markdown_preview_path = "#{markdown_preview_path}";

      .page-with-sidebar
        - if defined?(nav) && nav
          .layout-nav
            .container-fluid
              = render "layouts/nav/#{nav}"
        .content-wrapper{ class: "#{layout_nav_class} #{layout_dropdown_class}" }
          = render "layouts/broadcast"
          = render "layouts/flash"
          = yield :flash_message
          %div{ class: (container_class unless @no_container) }
            .content
              .clearfix
                = yield

      = render "layouts/init_auto_complete" if current_user

      - page_title       @project.name_with_namespace
      - page_description @project.description    unless page_description
      - header_title     project_title(@project) unless header_title
  - else
    .login-tips
      老板, 您还没有在 Gitlab 上
      = link_to '登录', new_user_session_path, target: "_blank"
      呢~
:css
  .login-tips {
    width: 300px;
    margin: 0 auto;
    margin-top: 20px;
  }
